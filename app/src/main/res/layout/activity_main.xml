<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/viewUserAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="老中医"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/viewUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="155****7066"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eae8e8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_rect_cart"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:text="购物车" />

        <TextView
            android:id="@+id/viewOrderManager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_rect_orders"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:text="订单" />


        <LinearLayout
            android:id="@+id/viewVideo"
            android:padding="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:layout_marginEnd="1px">


            <ImageView
                android:id="@+id/viewVideoIcon"
                android:src="@drawable/icon_rect_live_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="视频"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/viewClasses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:textColor="@android:color/black"
            android:drawableTop="@drawable/icon_rect_live_video"
            android:gravity="center"
            android:padding="10dp"
            android:text="视频" />

        <TextView
            android:id="@+id/viewList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_rect_answer"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:text="清单" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/icon_user_info"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:padding="15dp"
                android:text="个人信息" />

            <TextView
                android:id="@+id/viewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/icon_location"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:padding="15dp"
                android:text="我的地址" />

            <TextView
                android:id="@+id/viewOnlineService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="1px"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/icon_online_service"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="在线客服" />

            <TextView
                android:id="@+id/viewSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/icon_setting"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="设置" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>